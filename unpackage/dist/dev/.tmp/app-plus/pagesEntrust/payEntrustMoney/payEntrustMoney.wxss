
.pay_view{
    padding: 60rpx;
    width: 100%;
    box-sizing: border-box;
    background-color: #ffffff;
}
.pay_title{
    width:100%;
    box-sizing:border-box;
    font-size:28rpx;
    color:#999;
    margin-bottom:60rpx;
}
.broker_money{
    font-size:64rpx;
    text-align:center;
    margin-bottom:40rpx;
}
.house_price{
    text-align:center;
    font-size:30rpx;
    margin-bottom:40rpx;
}
.pay_particulars{
    width:100%;
    font-size:30rpx;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    margin-bottom:60rpx;
}
.line-box{
    width:25%;
    height:1px;
    background:#F5F5F5;
}
.line-txt{
    padding:0 20rpx;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
}
.pay-text{
    position:relative;
    left:0;
    right:0;
    margin:auto;
    width:100%;
    padding:30rpx 0;
    border-top:1px dashed #eee;
    font-size:30rpx;
}
.pay-text.pay-text-coupan{
    border-top:none;
}
.pay-btn-box{
    position:relative;
    left:0;
    right:0;
    margin:30rpx auto 30rpx;
    width:100%;
    height:100rpx;
    background:-webkit-linear-gradient(left, rgb(255,111,46) , rgb(254,142,13));
    line-height:100rpx;
    color:#fff;
    border-radius:10rpx;
    will-change: transform;
    font-size:32rpx;
    text-align: center;
    box-sizing: border-box;
}
.reminder-txt{
    position:relative;
    left:0;
    right:0;
    margin:auto auto 10rpx;
    width:100%;
    font-size:24rpx;
    color:#999;
    padding-left:20rpx;
    box-sizing: border-box;
}
.reminder-txt::before{
    content: "";
    display: block;
    position: absolute;
    width: 10rpx;
    height: 10rpx;
    background: #00ca85;
    top: 12rpx;
    left: 0;
    border-radius: 100%;
    will-change: transform;
}

