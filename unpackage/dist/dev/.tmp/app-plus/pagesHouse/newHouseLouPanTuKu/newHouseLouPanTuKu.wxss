	/* 查看大图 */
.max_img_view{
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: #000000;
        overflow: hidden;
}
.max_img_swiper{
		position: fixed;
		top: 50%;
		left: 0;
		right: 0;
		bottom: 0;
		height: 100%;
        -webkit-transform: translateY(-50%);
                transform: translateY(-50%);
}
.max_img_swiper_item{
		width: 100%;
}
.max_img_url{
		width: 100%;
}
.max_img_btn{
		position: fixed;
		bottom: 0;
		left: 0;
		width: 100%;
		height:120rpx;
        white-space: nowrap;
		background:#000;
}
.max_img_btn .max_img_btn_active{
		border-color:#1bc964;
		color:#1bc964;
}
.max_img_btn_text{
		padding:0 20rpx;
		height:50rpx;
		line-height:50rpx;
		text-align:center;
		border:1px solid #000;
		border-radius:32rpx;
		will-change: transform;
		color:#fff;
		font-size:30rpx;
		margin:0 22rpx;
        display: inline-block;
}

