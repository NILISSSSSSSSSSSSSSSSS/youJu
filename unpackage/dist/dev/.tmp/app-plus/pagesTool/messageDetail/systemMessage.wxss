
page{
    width: 100%;
    height: 100%;
    background: #f8f8f8;
}
.top_line{
    position: fixed;
    left: 0;
    width: 100%;
    right: 0;
    background: #ececec;
    height: 1rpx;
    top: 0;
    z-index: 99;
}
.sys_msg_list{
    width: 100%;
    height: 100%;
    background: #f8f8f8;
}
.sys_msg_item{
    background: #ffffff;
    padding: 34rpx 40rpx 0;
    box-sizing: border-box;
    margin-bottom: 15rpx;
}
.sys_msg_item_top{
    line-height: 60rpx;
    color: #7a8190;
    font-size: 22rpx;
}
.sys_msg_title{
    font-size: 32rpx;
    color: #101d36;
    text-align: left;
}
.unRead_red_point{
    position: relative;
    height: 12rpx;
    width: 12rpx;
    margin: 8rpx 0 auto 2rpx;
    border-radius: 100%;
    background: #ab7f2e;
    box-sizing: border-box;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
}
.sys_msg_cont{
    color: #7a8190;
    font-size: 30rpx;
    padding-top: 13rpx;
    box-sizing: border-box;
    position: relative;
}
.timeout_icon{
    position: absolute;
    right: 0;
    bottom: 6rpx;
    width: 100rpx;
    height: 40rpx;
    border-radius: 20rpx;
    text-align: center;
    background: #b9b9b9;
    line-height: 40rpx;
    color: #ffffff;
    font-size: 24rpx;
}
.sys_msg_cont_text{
    line-height: 45rpx;
    text-align: left;
    margin-bottom: 5rpx;
}
.check_detail{
    height: 90rpx;
    line-height: 90rpx;
    color: #7a8190;
    font-size: 28rpx;
    border-top: 1rpx solid #ececec;
    box-sizing: border-box;
    margin-top: 40rpx;
}
.check_detail_icon{
    width: 15rpx;
    height: 24rpx;
    margin: auto 0;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
}
.empty_item_bottom{
    width: 100%;
    height: 40rpx;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
}
.loading_view{
    -webkit-transform-origin: 0px 0px 0px;
            transform-origin: 0px 0px 0px;
    opacity: 1;
    -webkit-transform: scale(1, 1);
            transform: scale(1, 1);
    height:40px;
    line-height:40px;
    font-size:12px;
    text-align:center;
    margin-top: 10rpx;
}
.pullUpIcon{
    display:inline-block;
    height:15px;
    width:15px;
    border-radius:100%;
    margin:auto 6px;
    border:2px solid #666;
    border-bottom-color:transparent;
    vertical-align:middle;
    -webkit-animation:loading 1s linear infinite;
            animation:loading 1s linear infinite;
}
@-webkit-keyframes loading {
0% {
        -webkit-transform: rotate(0deg);
                transform: rotate(0deg);
}
50% {
        -webkit-transform: rotate(180deg);
                transform: rotate(180deg);
}
100% {
        -webkit-transform: rotate(360deg);
                transform: rotate(360deg);
}
}
@keyframes loading {
0% {
        -webkit-transform: rotate(0deg);
                transform: rotate(0deg);
}
50% {
        -webkit-transform: rotate(180deg);
                transform: rotate(180deg);
}
100% {
        -webkit-transform: rotate(360deg);
                transform: rotate(360deg);
}
}
.no_more_data{
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size:26rpx;
    color:#666666;
}
.no_data_list{
    color: #6c6c6c;
    font-size: 24rpx;
    text-align: center;
    margin-top: 100rpx;
    width: 100%;
}

