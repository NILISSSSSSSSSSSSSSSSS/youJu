
.agent-head{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background-size: 100%;
    margin: 0 auto 20rpx auto;
}
.agent-head image{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}
.agent-name{
    text-align: center;
    font-size: 34rpx;
    color: #101d36;
}
.agent-store{
    text-align: center;
    font-size: 24rpx;
    color: #8e94a1;
}
.appraise-time{
    text-align: center;
    font-size: 24rpx;
    color: #8e94a1;
    margin-top: 40rpx;
    position: relative;
}
.appraise-time:before, .appraise-time:after {
    content: '';                 /*CSS伪类用法*/
    position: absolute;         /*定位背景横线的位置*/
    top: 50%;
    width: 15%;
    border-bottom: 1rpx dashed #c6c9d0;
}
.appraise-time:before{
    left: 7%;        /*调整背景横线的左右距离*/
}
.appraise-time:after {
    right: 7%;
}

