.down_load{
    width: 140rpx;
    height: 140rpx;
    position: fixed;
    bottom: 200rpx;
    right: 30rpx;
    z-index: 99;
}
/*弹窗*/
.close_down_view{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    z-index: 999;
}
.down_content{
    width: 630rpx;
    margin: auto;
    -webkit-flex-shrink: 0;
            flex-shrink: 0;
    background: #ffffff;
    border-radius: 20rpx;
    box-sizing: border-box;
}
.down_title{
    font-size: 32rpx;
    color: #333333;
    line-height: 70rpx;
    text-align: center;
    margin-top: 35rpx;
}
.down_input_view{
    background: #f4f4f4;
    height: 72rpx;
    width: 530rpx;
    margin: 18rpx auto 47rpx auto;
    border-radius: 7rpx;
    box-sizing: border-box;
}
.down_input_p{
    color: #bbbbbb;
    font-size: 30rpx;
    text-align: left;
}
.down_input{
    font-size: 30rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #333333;
    text-align: left;
    width: 100%;
    padding-left: 30rpx;
    padding-right: 30rpx;
    box-sizing: border-box;
}
.down_btn{
    height: 90rpx;
    line-height: 90rpx;
    width: 100%;
    font-size: 32rpx;
    text-align: center;
    border-top: 1rpx solid #e7e7e7;
    box-sizing: border-box;
}
.cancel_down{
    width: 100%;
    color: #999999;
}
.send_down{
    color: #ab7f2e;
    width: 100%;
    border-left: 1rpx solid #e7e7e7;
    box-sizing: border-box;
}

